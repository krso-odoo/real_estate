<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_property_tree" model="ir.ui.view">
        <field name="name">Estate Properties Name</field>
        <field name="model">estate.property</field>
        <field name="arch" type= "xml">
            <tree>
                
                <field name="name" />
                <field name="expected_price" />
                <field name="selling_price" />
            </tree>
        </field>
    </record>


    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">Estate Properties Name</field>
        <field name="model">estate.property</field>
        <field name="arch" type= "xml">
            <form>
                <header>
                    <button name="action_do_sold" type ="object" string="Sold"/>
                    <button name="action_do_cancel" type ="object" string="Cancel"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                <group>

                    <group>
                        <!--field name="status"/>-->
                         <!-- <h1> Hello </h1> -->
                        <field name="name" />
                        <field name="expected_price" />
                        <field name="selling_price" />
                        <field name="property_type_id"/>
                    </group>
                
                    <group>
                        <div class="oe_title">
                                    
                             <field name="image" widget="image" class="oe_avatar"/>
                        </div>
                    </group>
                </group>

                    <notebook>
                        <page string= "desc">
                            <group>
                                <group>
                                   
                                    <field name= "postcode" />
                                     <field name= "description" />
                                </group>
                                <group>
                                    <field name= "pname"/>
                                    <field name= "date_availability" />
                                    
                                </group>
                            </group>
                        </page>
                        <page string= "price">
                            <group>
                            <group>
                                <field name="expected_price" />
                            </group>
                            <group>
                                <field name="selling_price" />
                            </group>    
                        </group>
                        </page>
                        <page string= "Property Details">
                            <group>
                                <group>
                                    <field name= "bedrooms" />
                                    <field name= "living_area" />
                                </group>
                                <group>
                                    <field name= "facades" />
                                    <field name= "garage" />
                                </group>
                                <group>
                                    <field name= "garden" />
                                    <field name= "garden_area" />
                                </group>
                                <group>
                                    <field name= "garden_orientation" />
                                    <field name= "total_area" />
                                </group>
                                
                            </group>
                        </page>
                        <page string="Other Info">
                        <group>
                            <group>
                                <field name="buyer_id"/>
                            </group>
                            <group>
                                <field name="salse_person"/>
                            </group>
                        </group>
                        </page>
                        <page string="Offer">
                            <group>
                                <field name="offer_ids"/>
                               
                            </group>
                        </page>
                    </notebook>
                
                </sheet>
            </form>
        </field>
    </record>






    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">Estate Properties offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type= "xml">
            <tree>
                <field name="price" />
                <field name="partner_id" />
                <field name="status" />
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_do_accepted" string="Accept" type="object" icon="fa-check" attrs="{'invisible': [('parent.status','=', 'cancel')]}"/>
                <button name="action_do_refused" string="Refuse" type="object" icon="fa-close" attrs="{'invisible': [('parent.status','=', 'cancel')]}"/>                
            </tree>
        </field>
    </record>


